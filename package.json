{
  "name": "@opendxl/dxl-client",
  "version": "0.1.0",
  "author": "McAfee LLC",
  "description": "An OpenDXL client library for JavaScript",
  "license": "Apache-2.0",
  "keywords": [
    "opendxl",
    "dxl",
    "mcafee",
    "client"
  ],
  "files": [
    "bin",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "bl": "^1.2.1",
    "commander": "^2.13.0",
    "inherits": "^2.0.3",
    "ini": "^1.3.5",
    "mkdirp": "^0.5.1",
    "mqtt": "^2.14.0",
    "msgpack5": "^3.6.0",
    "read": "^1.0.7",
    "tmp": "^0.0.33",
    "uuid": "^3.1.0",
    "which": "^1.3.0"
  },
  "devDependencies": {
    "archiver": "^2.1.1",
    "chai": "^4.1.2",
    "jsdoc": "^3.5.5",
    "jshint": "^2.9.5",
    "mocha": "^4.1.0",
    "rimraf": "^2.6.2",
    "safe-buffer": "^5.1.1",
    "sinon": "^4.1.4",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  },
  "eslintConfig": {},
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/opendxl/opendxl-client-javascript.git"
  },
  "bin": {
    "dxlclient": "./bin/dxlclient.js"
  },
  "scripts": {
    "predist": "npm install && rimraf *.tgz",
    "dist": "npm pack && npm run doc && node scripts/dist.js",
    "test": "mocha --recursive",
    "lint": "npm run lint:jshint && npm run lint:standard",
    "lint:jshint": "jshint bin lib sample scripts test",
    "lint:standard": "standard | snazzy",
    "preci": "npm run lint",
    "ci": "npm run test",
    "predoc": "rimraf out/jsdoc",
    "doc": "jsdoc -c ./doc/conf.json doc/index.md -r lib/ -u doc/sdk -d out/jsdoc",
    "postdoc": "node scripts/postdoc.js"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
